#INPUT:
#GR7 : return address

#REGISTER USAGE:
#GR1 : loop counter
#GR2 : x2F (space)
#GR3 : 0

clear: STORE 7,&retAddr
LOAD$ 1,0
LOAD$ 2,47
LOAD$ 3,0

while 1 < $1200
    STOREP~ 2,&lc
    ADD$ 1,1
    STORE 1,&lc
endwhile

#STORE 3,&tileaddr   #tileaddr in 'calc'

JMP 0,&retAddr

lc: SLI 0   #loopcounter
retAddr: SLI 0
